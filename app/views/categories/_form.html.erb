<%= form_with(model: category, html: {class: "row g-4 "}) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col-md-4">
      <div class="form-outline">

        <%= form.label  :name, 'Назва категорії',class: "col-form-label-lg" %>
        <%= form.text_field :name, class: "form-control is-invalid", :required => true  %>
        <div class="invalid-feedback" style="color: yellow">Треба вказати групу товарів</div>
    </div>
    </div>

    <div class="col-md-8">
      <div class="form-outline">
      <%= form.label :description, 'Опис (товари вводяться через кому)',class: "col-form-label-lg" %>
      <%= form.text_field :description, class: "form-control is-invalid",  :required => true %>
        <div class="invalid-feedback" style="color: yellow">Треба заповнити товарами для покупок (може бути один)</div>
    </div>
    </div>

    <div>
    <%= form.submit defined?(submit_name)?  submit_name: "Submit", class: "btn btn-primary btn-lg"%>

    </div>

<% end %>

